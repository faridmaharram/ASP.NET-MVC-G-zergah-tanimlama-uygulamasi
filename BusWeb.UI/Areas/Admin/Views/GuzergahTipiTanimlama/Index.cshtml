@model BusApp.UI.Areas.Admin.Models.RouterTypeViewModel.RouterTypeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Areas/Admin/js/bootbox.min (1).js"></script>

@Html.Raw(TempData["Ekle"])
@Html.Raw(TempData["Sil"])
@Html.Raw(TempData["Duzenle"])


@using (Html.BeginForm("GuzergahTipi", "GuzergahTipiTanimlama"))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Router_Type.ROUTE_TYPE_NAME, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Router_Type.ROUTE_TYPE_NAME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Router_Type.ROUTE_TYPE_NAME, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    
        <input type="submit" class="btn btn-success" />

        }



        <table class="table">
            <tr>
                <th>

                    Güzergah Tipi
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model.Router_Types)
    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ROUTE_TYPE_NAME)
                    </td>

                    <td>
                        <a href="@Url.Action("Duzenle", new { id= item.ROUTE_TYPE_ID })" class="btn btn-success">Duzenle</a>

                        <a href="@Url.Action("Sil", new { id = item.ROUTE_TYPE_ID })" class="btn btn-danger">Sil</a>

                    </td>
                </tr>
    }

        </table>


