@model BusWeb.Data.Model.CITY

@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Duzenle</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
